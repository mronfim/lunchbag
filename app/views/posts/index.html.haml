.ui.grid
  .six.wide.column
    .new-post-form
      = form_for @post do |f|
        - if f.object.errors.any?
          %ul
            - f.object.errors.full_messages.each do |msg|
              %li= msg

        .input-group
          .label
            = f.label :title
          .ui.input.fluid
            = f.text_field :title

        .input-group
          .post-file-input
            %i.icon.camera.retro
          = f.file_field :file

        .input-group
          = f.submit "Post", class: 'ui green button'

  .ten.wide.column
    - if @posts.any?
      - @posts.each do |post|
        = render partial: 'post', locals: { post: post }
    - else
      %h2
        No posts found
        %i.ion-sad
